                        </Hyperlink>
                    </ui:TextBlock>
                </Grid>
            </ui:CardControl.Header>
            <ui:Button Margin="0,0,36,0"
                       Command="{Binding SwitchAutoMusicGameCommand}"
                       Content="{Binding SwitchAutoMusicGameButtonText}" />
        </ui:CardControl>



